//************************************************************************//
// Variables
//************************************************************************//



$font-family--base: 'DINNextLTPro-Regular',sans-serif;
$font-family--bold: 'DINNextLTPro-Medium',sans-serif;

$color-white: #ffffff;
$color-dark: #191919;
$color-light-grey: #7f7f80;
$color-dark-grey: #76777a;
$color-orange: #f39200;

$letter-spacing-base: 0.04em;



//************************************************************************//
// Home Slider
//************************************************************************//


  
.main-slideshow-wrapper {
  position: relative;
  overflow: hidden;
  height: 700px;

  @media (max-width: 720px) {
    height: 450px;
  }
  
  .slide-container {
    height: 100%;
    
    .home-slide {
      position: relative;
    }
  }

  .item {
    height: 700px;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;

    @media (max-width: 720px) {
      height: 450px;
      background-position: 90% center;
      
      .slider img {
      	display: none; 
      }
    }
    
    .cta-extra {
      font-family: $font-family--bold;
      font-size: 18px;
      line-height: 1.4;
      color: $color-white;
      letter-spacing: $letter-spacing-base;
      text-transform: uppercase;
      margin-left: 15px;
    }
      
    @media (max-width: 720px) {
      height: 450px !important;
      
      .slide-text {
        top: 120px !important;
        text-align: left !important;
        
        h2 {
          font-size: 44px;
    	  line-height: 1;
          color: $color-white !important;
          width:80%;
          letter-spacing:1px;
          
        }
        
        .button {
          margin-bottom: 20px;
          font-size: 15px;
        }
        
        .cta-extra {
       	  display: block;
          font-size: 15px;
          margin-left: 30px;
          max-width: 200px;
      	}
      }
    }
  }
  
  .owl-buttons {
	text-indent: -99999px;
    
    .owl-prev {
      &::before {
        content: '';
        display: block;
        position: absolute;
        top: 50%;
        left: 30px;
        margin-top: -12px;
        background-color: rgba(25,25,25,0.67);
        height: 24px;
        width: 24px;
        border-radius: 50%;
        z-index: 1000;
      }
    }

    .owl-next {
      &::before {
        content: '';
        display: block;
        position: absolute;
        top: 50%;
        right: 30px;
        margin-top: -12px;
        background-color: rgba(25,25,25,0.67);
        height: 24px;
        width: 24px;
        border-radius: 50%;
        z-index: 1000;
      }
    }

    @media (max-width: 720px) {
      display: none;
    }

  }
  
  .owl-pagination {
    display: block;
    position: absolute;
    left: 50%;
    bottom: 20px;
    -ms-transform: translateX(-50%);
    -wbkit-transform: translateX(-50%);
    transform: translateX(-50%);

    .owl-page {
      display: inline-block;

      span {
        display: block;
        background-color: rgba(25,25,25,0.56);
        width: 15px;
        height: 15px;
        margin-right: 5px;
        border: 0;
        border-radius: 50%;
        -webkit-transition: color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        -moz-transition: color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        transition: color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      }

      &.active {
        span {
          background-color: rgba(25,25,25,0.9);
        }
      }
    }
  }
}




//************************************************************************//
// Home Feature
//************************************************************************//




.home-module-wrapper {
  
  &:nth-child(3),
  &:nth-child(7){
    
    .home-full-width-banner {
      .full-width-img {
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        height: 400px;

        @media (max-width: 720px) {
          height: 350px;
          margin-top:30px!important;
        }
      }
    }
  }
 
  &:nth-child(5),
  &:nth-child(7) {
    border-bottom: 1px solid #f0f0f0;
  }
  
  &:nth-child(7) {
    @media (max-width: 720px) {
      border-bottom: 0;
      
      .home-full-width-banner {
        .full-width-img {
          height: 300px;
        }
      }
    }
  }
}

.home-module {
  
  h2 {
    font-size: 56px;
    
    @media (max-width: 720px) {
      font-size: 25px;
    }
  }
  
  .home-left-right-text {
    font-size: 19px;
    
    @media (max-width: 720px) {
      font-size: 16px
    }
    
    h3 {
      margin-bottom: 10px;
    }
    
    .rte {
      margin-top: 0;
    }
  }
  
  &.home-full-width-feature {
    padding-top: 70px;
    padding-bottom: 0px;
    
    @media (max-width: 720px) {
      padding-top: 30px;
    }
    
    .product-introduction {
      padding-bottom:70px;
      
      @media (max-width: 720px) {
      padding-bottom: 10px;
    	}
    }
    
    .home-left-right-feature {
      margin-top: 0;
    
      .home-left-right-text {
        text-align: left;
        
        @media (max-width: 720px) {
          text-align: center;
        }
      }
    } 
    
    .rte {
      
      @media (max-width: 720px) {
        font-size: 16px;
      }
      
      ul {
        margin-top: 20px;
        padding-left: 0;
        list-style-type: none;
        
        li {
          margin: 0;
          
          @media (max-width: 720px) {
            text-align: center;
          }
          
          &::before {
            content: '\B7';
    		position: relative;
    		margin-right: 10px;
          }
        }
      }
    }
    
    @media (max-width: 720px) {
      padding-top: 30 !important;
    }
  }
  
  &.home-full-width-banner {
    max-width: 100%;
    padding: 0;
    
    .full-width-img {
      position: relative;
      
      img {
        width: 100%;
      }
      
      .banner-text {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100%;
        max-width: 1020px;
    	margin: 0 auto;
        padding: 0 30px;
        transform: translate(-50%, -50%);
        text-align: center;
      }
    }
    
    &.product-banner {
      max-width: 1020px;
      margin: 0 auto;
      
      .home-left-right-feature {
      
        @media (max-width: 720px) {
          position: relative;
          display: -webkit-box;
          display: -moz-box;
          display: -ms-flexbox;
          display: flex;
          flex-wrap: wrap;
        }

        .home-left-right-text {
          vertical-align: top;

          @media (max-width: 720px) {
            order: 1;
            width: 100%;
            
            .button {
              position: absolute;
              width: 70%;
              bottom: 20%;
              left: 50%;
    		  transform: translateX(-50%);
              padding: 10px 0px 5px !important;
              font-size: 18px;
			  width: 200px;
            }
          }

          h3 {
            font-family: $font-family--base;
            font-size: 20px;
            color: $color-light-grey;
            margin:0;
            
            @media (max-width: 720px) {
              font-size: 16px;
              line-height: 25px;
            }
          }

          p {
            font-family: $font-family--bold;
            font-size: 48px;
            color: $color-dark-grey;
            margin: 0;
            
            @media (max-width: 720px) {
              font-size: 22px;
              margin: 0;
            }
          }
        }

        .home-left-right-media {
          @media (max-width: 720px) {
            order: 2;
            width: 100%;
          }
        }
      }
    }
  }
  
  &.home-left-right-features {
    padding: 0 0 50px;
    max-width: 100%;
    
    @media (max-width: 720px) {
      border-bottom: 1px solid #f0f0f0;
      padding: 0 0 40px;
    }
    
    .home-left-right-feature {
      margin-top: 0;
      position: relative;
      
      &:first-child {
        .home-left-right-media {

          @media (max-width: 720px) {
            margin-top: 0;
          }
        }
      }
      
      .home-left-right-text {
        
        @media (max-width: 720px) {
          margin-top: 30px;
          text-align: center;
        }
    
        .home-left-right-text-container {
          max-width: 450px;
          padding-top: 20px;
          padding-bottom: 20px;

          @media (max-width: 720px) {
            max-width: 100%;
            padding: 0 30px !important;
          }
        }
      }

      .home-left-right-media {

        img {
          width: 100%;
        }
        
        @media (max-width: 720px) {
          margin-top: 40px;
        }
      }
      
      &.media-aligned-right {
        
        .block-after-right {
          position: absolute;
          top: 50%;
          left: 57%;
          width: 25%;
          max-width: 377px;
    	  transform: translate(-50%, -50%);
          
          @media (max-width: 720px) {
            display: none;
          }
            
          @media (max-width: 1050px) {
            left: 58%;
          	width: 23%;
          }
        }
        
        .home-left-right-text {
          padding-right: 100px;
          position: relative;
          
          .home-left-right-text-container {
              float: right;
            
            @media (max-width: 720px) {
              float: none;
            }
          }
          
          @media (max-width: 1050px) {
            padding-left: 50px;
            padding-right: 50px;
          }
        }
        
        .home-left-right-media {
			padding-left: 0;
        }
      }
      
      &.media-aligned-left {
        
        .block-after-left {
          position: absolute;
          top: 50%;
          right: 57%;
          width: 25%;
          max-width: 377px;
    	  transform: translate(50%, -50%);
          
          @media (max-width: 720px) {
            display: none;
          }
            
          @media (max-width: 1050px) {
            right: 58%;
          	width: 23%;
          }
        }
        
        .home-left-right-text {
          padding-left: 100px;
          
          @media (max-width: 1050px) {
            padding-left: 50px;
            padding-right: 50px;
          }
        }
        
        .home-left-right-media {
			padding-right: 0;
        }
      }
      
    }
  }
  
  &.home-in-line-features {
    padding-bottom: 60px;
    max-width: 1200px;
    
    @media (max-width: 720px) {
      padding-bottom: 30px;
    }
    
    .section-description{
      
      @media (max-width: 720px) {
        margin-bottom: 20px;
      }
    }
    
    .home-in-line-feature {
      margin-bottom: 30px;
      width: 24%;
      
      @media (max-width: 720px) {
        width: 100%;
      }
      
      img {
        
        padding: 0px 35px;
        
          @media (max-width: 720px) {
          width: 55%;
        }
      }
      
      .home-in-line-text {
        font-size: 19px;

        @media (max-width: 720px) {
          font-size: 16px;
        }
      }
      
      &:last-child{
        @media (max-width: 720px) {
          margin-bottom:0px!important;
        }
      }
    }
    
    .home-in-line-cta {
    
      @media (max-width: 720px) {
          display: none;
        }
    }
    
    .home-in-line-cta a {
      color: #4bb3ad;
      text-decoration: underline;
      
      @media (max-width: 720px) {
        display: none;
      }
    }
  }
  
  &.home-testimonials {
    margin-bottom: 60px;
    
    @media (max-width: 720px) {
      margin-bottom: 20px;
    }
    
    .home-testimonial {
      margin-bottom: 30px;
      
      .home-testimonial-avatar {
        @media (max-width: 720px) {
          position: relative;
          display: block;
          margin: 0 auto 15px;
          width: 80px;
    	  height: 80px;
          border-radius: 50px;
        }
      }
      
      .home-testimonial-quote {
        font-size: 19px;
        line-height: 1.4;

        @media (max-width: 720px) {
          font-size: 16px;
          text-align: center;
          margin-left: auto;
        }
      }
    }
    
    .home-testimonial-quote-source {
     	margin-top: 0; 
      
      	@media (max-width: 720px) {
          font-size: 16px;
          text-align: center;
          margin-left: auto;
        }
    }
  }
  
  .home-full-width-banner-instagram-cta {
    text-align: center;
    text-decoration: underline;
    padding-bottom: 60px;
    
    @media (max-width: 720px) {
      padding-bottom: 20px;
    }
    
    a {
      color: #3fa7a5;
    }
  }
}
