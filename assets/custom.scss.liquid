//************************************************************************//
// Accordion
//************************************************************************//



.page-title {
  margin: 0 0 50px;
}



//************************************************************************//
// Accordion
//************************************************************************//

.accordion-container {
  max-width: 100% !important;
  
  h3.accordion-title {
    margin-top:80px;
  }
  
  h3 {
    
    text-align: left;
    margin-left: 0;
    margin-right: 0;
    
    @media (max-width: 720px) {
      font-size: 30px;
    }
  }
  
  .accordion-block {
    max-width: 100%;
    border-bottom: 1px solid #f0f0f0;
  }

  button.accordion {
      background-color: transparent;
      font-family: $font-family--bold;
      color: $color-light-grey;
      cursor: pointer;
      padding: 30px 15px 30px 0;
      width: 100%;
      border-top: 1px solid #f0f0f0;
      border-radius: 0;
      text-align: left;
      outline: none;
      font-size: 21px;
      line-height: 1.2;
      height: auto;
      transition: 0.4s;
      position:relative;
    
      @media (max-width: 720px) {
        font-size: 19px;
      }
  }
  
  button.accordion .arrow {
    font-family: FontAwesome;
    -ms-transform: rotate(0deg); /* IE 9 */
    -webkit-transform: rotate(0deg); /* Chrome, Safari, Opera */
    transform: rotate(0deg);
    -moz-transition: all 0.5s ease;
    position: absolute;
    right:0px;
    
    @media (max-width: 720px){
      position: absolute;
      right:0px;
    }
  }
  
  button.accordion.active .arrow {
    font-family: FontAwesome;
    -ms-transform: rotate(-180deg); /* IE 9 */
    -webkit-transform: rotate(-180deg); /* Chrome, Safari, Opera */
    transform: rotate(-180deg);
    -moz-transition: all 0.5s ease;
    position: absolute;
    right:0px;
    
    @media (max-width: 720px){
      position: absolute;
      right:0px;
    }
    
  }

  button.accordion.active, button.accordion:hover {
      background-color: transparent;
      color: $color-orange;
  }

  div.panel {
      font-family: $font-family--base;
      padding: 0;
      background-color: white;
      max-height: 0;
      max-width: 100%;
      overflow: hidden;
      transition: 0.6s ease-in-out;
      opacity: 0;

      p {
        max-width: 100%;
        margin-top: 0;
        font-size: 20px;
        
        @media (max-width: 720px) {
        	font-size: 19px;
      	}
      }
  }

  div.panel.show {
      opacity: 1;
      max-height: 500px;  
  }
}


//************************************************************************//
// Footer
//************************************************************************//


.footer-wrapper {
  margin-top: 70px;
  
  footer {
    font-size: 16px;
    padding: 50px 0px;

    h4 {
      font-family: $font-family--bold;
      font-size: 16px;
      text-transform: none;
      margin-bottom: 20px !important;
      
      @media (max-width: 720px) {
        margin-bottom: 10px !important;
      }
      
    }
    
    li {
      @media (max-width: 720px) {
        margin: 4px 0;
      }
    }

    &.showing-4-lists {

      @media (max-width: 720px) {
        position: relative;
        display: -webkit-box;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        flex-wrap: wrap;
      }

      .footer-link-list {
        width: 22%; 
        margin-bottom: 0;

        @media (max-width: 720px) {
          order: 1;
          width: 100%;
          margin-bottom: 30px;
        }

        &.social-icons {
          
          width: 34%;
          padding-right:0px;

          ul {
            @media (max-width: 720px) {
              display: inline-block;
            }

            .social-link {
              float: left;
              margin: 0;

              a{
                font-size: 0;

                @media (max-width: 720px) {
                  padding-left: 30px;
                }

                &::before {
                  font-size: 20px;
                  margin-top: -15px;
                }
              }
            }
          }
          
          .payment-options {
            clear: both;
            margin-top: 20px;
            
            &.footer-module{
              
              h4{
              	margin-bottom: 10px !important;
              }
            
              #payment-options-wrapper{
                
                text-align:left;
                width:50%;
                
                @media (max-width: 720px) {
                width: 100%;
                text-align: center;
                padding: 0 30%;
              	}
                
                span {
                  padding-top:5px;
                  padding-bottom:5px;
                }
                
              }
              
            }
            
          }
          
          @media (max-width: 720px) {
              width:100%;
              padding-right: 15px;
              margin-bottom: 10px;
            }
          
        }
      }
    }

    .copyright {
      @media (max-width: 720px) {
        order: 2 !important;
      }

      .contentinfo {

        @media (max-width: 720px) {
          max-width: 100%;
        }

        .footer-branding {
          
          @media (min-width: 720px) {
            max-width: 150px;
          }

          a.logo {
            height: auto;

            @media (max-width: 720px) {
              margin: 0 auto;
              margin-bottom: 20px;
              max-width:150px;
            }

            img {
                top: auto;
                max-width: 100%;
            }
          }
        }

        p {
          
          @media (min-width: 720px) {
            margin-left: 36px;
          }
          @media (max-width: 720px) {
            font-size: 16px;
          }
          
          color: $color-light-grey;
        }
      }
    }
  }
}