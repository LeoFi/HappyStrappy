//************************************************************************//
// Variables
//************************************************************************//


$font-family--base: 'DINNextLTPro-Regular',sans-serif;
$font-family--bold: 'DINNextLTPro-Medium',sans-serif;

$color-black: #000;
$color-white: #ffffff;
$color-dark: #191919;
$color-light-grey: #7f7f80;
$color-dark-grey: #76777a;
$color-orange: #f39200;
$color-green: #40a7a6;

$letter-spacing-base: 0.04em;



//************************************************************************//
// HTML Elements
//************************************************************************//



body {
  font-family: $font-family--base;
  font-size: 19px;
  line-height: 1.5;
  
  @media (max-width: 720px) {
    font-size: 16px;
  }
}

* {
  font-weight: normal !important;
}

*:focus {
  outline: 0 !important;
}

.button,
.button.secondary {
  font-family: $font-family--bold;
  font-size: 18px;
  line-height: inherit;
  letter-spacing: $letter-spacing-base;
  text-transform: uppercase;
  border-radius: 50px;
  padding: 10px 30px 5px;
  background: #40a7a6;
  height: auto;
  
  @media (max-width: 720px) {
    font-size: 15px;
  }
}

.slideshow-loader {
	border-left: 3px solid rgba(0, 0, 0, .15);
    border-right: 3px solid rgba(0, 0, 0, .15);
    border-bottom: 3px solid rgba(0, 0, 0, .15);
    border-top: 3px solid rgba(0, 0, 0, .8);
	height: 30px;
    width: 30px;
    border-radius: 100%;
    position: absolute;
	left: 50%;
    right: 4px;
    top: 50%;
    margin-top: -15px;
    z-index: 1;
    -webkit-animation: rotation .6s infinite linear;
    -moz-animation: rotation .6s infinite linear;
    -o-animation: rotation .6s infinite linear;
    animation: rotation .6s infinite linear;
    -webkit-transition: right 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    -moz-transition: right 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transition: right 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}


//************************************************************************//
// Typography
//************************************************************************//

.template-page .rte h3{
  margin-left: 0;
  margin-right: 0;
}

h1, h2, h3, h4, h5 {
  font-family: $font-family--bold;
  font-weight: normal !important;
  line-height: 1;
}

h3 {
  font-size: 25px;
}

strong {
  font-family: $font-family--bold;
  font-weight: normal !important;
}

.section-title {
  font-family: $font-family--bold;
  text-transform: none;
  margin-bottom: 20px !important;
  
   @media (max-width: 720px) {
     margin-bottom: 10px !important;
   }
}

.section-description {
  font-family: $font-family--base;
  font-size: 19px;
  letter-spacing: 0;
  margin-bottom: 50px;

  @media (max-width: 720px) {
    font-size: 16px;
  }
}



