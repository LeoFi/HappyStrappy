//************************************************************************//
// Variables
//************************************************************************//



$font-family--base: 'DINNextLTPro-Regular',sans-serif;
$font-family--bold: 'DINNextLTPro-Medium',sans-serif;

$color-white: #ffffff;
$color-black: #000000;
$color-dark: #191919;
$color-light-grey: #7f7f80;
$color-dark-grey: #76777a;
$color-orange: #f39200;
$color-green: #40a7a6;

$letter-spacing-base: 0.04em;



//************************************************************************//
// Product Slider
//************************************************************************//



.template-product-slideshow {
  
  .footer-wrapper {
    @media (max-width: 720px) {
      margin-top: 0px;
    }
}
  
  .add-to-cart-shipping h3 {
    display: inline-block;
    font-family: $font-family--base;
    font-size: 17px;
    color: $color-white;
    margin: 15px 0 0;
    vertical-align: top;
  }
  
  .product-slideshow-wrapper {
    position: relative;
    height: 700px;
    overflow: hidden;
    
    @media (max-width: 720px) {
      height: 450px;
    }
    
    .slider {
        display: none;
        opacity: 0;
        -webkit-transition: opacity 400ms ease;
      -moz-transition: opacity 400ms ease;
      -ms-transition: opacity 400ms ease;
      -o-transition: opacity 400ms ease;
      transition: opacity 400ms ease;
      
        &.owl-carousel {
          opacity: 1;
        }
    }

    .item {
        height: 700px;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: 20% center;
    }
    
    
    .slider-black #item-1{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 30% 35px;
        }
    }
    .slider-black #item-2{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 20%;
        }
    }
    .slider-white #item-1{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 25% 35px;
        }
    }
    .slider-white #item-2{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 25% center;
        }
    }
    .slider-gold #item-1{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 25% 35px;
        }
    }
    .slider-gold #item-2{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 17% center;
        }
    }
    .slider-silver #item-1{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 12% center;
        }
    }
    .slider-silver #item-2{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 21% 35px;
        }
    }
    .slider-ganzrosegold #item-1{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 16%;
        }
    }
    .slider-ganzrosegold #item-2{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 16%;
        }
    }
    .slider-ganzrosegold #item-3{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 16%;
        }
    }
    .slider-ganzgolden .owl-item:nth-child(1) .item{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 19%;
        }
    }
    .slider-ganzgolden .owl-item:nth-child(2) .item{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 16%;
        }
    }
    .slider-ganzgolden .owl-item:nth-child(3) .item{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 21% 
        }
    }
    .slider-ganzsilver #item-1{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 17%;
        }
    }
    .slider-ganzsilver #item-2{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 17%;
        }
    }
    .slider-ganzsilver #item-3{
        @media (max-width: 720px) {
          height: 450px;
          background-position: 17%;
        }
    }
  }
  
  .owl-buttons {

    .owl-prev {
      &::before {
        content: '';
        display: block;
        position: absolute;
        top: 50%;
        left: 30px;
        margin-top: -12px;
        background-color: rgba(25,25,25,0.67);
        height: 24px;
        width: 24px;
        border-radius: 50%;
        z-index: 1000;
      }
    }

    .owl-next {
      &::before {
        content: '';
        display: block;
        position: absolute;
        top: 50%;
        right: 30px;
        margin-top: -12px;
        background-color: rgba(25,25,25,0.67);
        height: 24px;
        width: 24px;
        border-radius: 50%;
        z-index: 1000;
      }
    }

    @media (max-width: 720px) {
      display: none;
    }

  }
  
  .owl-pagination {
    display: block;
    position: absolute;
    left: 50%;
    bottom: 20px;
    -ms-transform: translateX(-50%);
    -wbkit-transform: translateX(-50%);
    transform: translateX(-50%);

    .owl-page {
      display: inline-block;
      
      span {
        display: block;
        background-color: rgba(25,25,25,0.56);
        width: 12px;
        height: 12px;
        margin-right: 15px;
        border: 0;
        border-radius: 50%;
        -webkit-transition: color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      -moz-transition: color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        transition: color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      }
      
      &.active {
        span {
          background-color: rgba(25,25,25,0.9);
        }
      }
    }
  }
  
  .product-details-wrapper {
    position: absolute;
    top: 150px;
    right: 0;
    padding: 0 30px;
    height: auto;
    width: 40%;
    z-index: 100;
    
    @media (max-width: 1000px) {
      width: 50%;
      padding: 0 15px;
    }
    
    @media (max-width: 720px) {
      position: relative;
      display: block;
      width: 100%;
      top: 0;
      padding: 30px;
      background-color: $color-light-grey;
    }
    
    @media (max-width: 320px) {
      padding: 30px 15px;
    }
    
    .product-details-container {
      @media (max-width: 720px) {
        width: 320px;
        margin: 0 auto;
      }
      
      @media (max-width: 320px) {
        width: 100%;
      }
    
      .page-title {
        font-family: $font-family--bold;
        font-size: 40px;
        color: $color-white;
        margin: 0;
        text-align: left;
        max-width: 400px;
        
        @media (max-width: 720px) {
          font-size: 25px;
        }
      }

      .product-details {
        font-family: $font-family--base;
        float: none;
        width: 100%;
        padding-left: 0;

        .product-price {
          .price {
            .money {
              font-size: 40px;
              color: $color-white;
            }

            .money-text {
              font-size: 19px;
              color: $color-white;
            }
          }
        }
      }
      
      .wrapper{
          font-size:14px;
          line-height:24px;
        h1 {
          font-size:20px;
          font-weight:bold;
          text-align:center;
          text-transform:uppercase;
        }
        h1 + p {
          text-align:center;
          margin:20px 0;
          font-size:16px;
        }
        .tabs {
          margin:0;
          border-bottom: 2px solid white;
        max-width: 310px;
          
          li {
            float:left;
            width:50%;
            margin:0;
          }
          a {
            display: block;
            text-align: left;
            color: white;
            font-size: 19px;
            padding: 30px 0 10px;

            &:hover, &.active {
              border-bottom: 2px solid white;
            }
          }
        }
        #setunderline{
          color:white;
          margin: 10px 0;
          font-size: 15px;
          border-bottom: 2px solid white;
        max-width: 310px;
        padding-bottom: 8px;
        }
        .clearfix:after {
          content:"";
          display:table;
          clear:both;
        }
      }


      .product-form {
        float: none;
        width: 100%;
        padding-left: 0;

        .product-options {
          display: none;
        }

        #custom-palette {
          margin-top: 45px;
          width: 225px;
          display:inline-block;

          @media (max-width: 720px) {
            margin-top: 30px;
            width:195px;
          }

          h3 {
            display: inline-block;
            font-family: $font-family--base;
            font-size: 19px;
            color: $color-white;
            margin: 5px 5px 0 0;
            vertical-align: top;
            
            .color-text {
              
              background-color: rgba(150,150,150,0.6);
              border-radius: 10px;
              font-family: $font-family--bold;
              color: $color-white;
              font-size: 14px;
              letter-spacing: 0.05em;
              text-transform: uppercase;
              line-height: 1;
              padding: 6px 7px 3px;
              vertical-align: bottom;
              margin-left:5px;
              
            }
          }
          
          #palette-wrapper {

            ul.palette-items {
              
              margin: 0;
              padding: 5px;
              padding-left:0px;
              line-height: 0;

              li {
                width: 20px;
                height: 20px;
                border: 1px solid $color-white;
                border-radius: 50px;
                display: inline-block;
                margin: 10px 5px 0 0;

                &.active {
                  border-width: 2px; 
                }

                &:hover {
                  cursor: pointer;
                  border: 1px solid $color-white;
                }

                &.color-black {
                  background-color: $color-black;
                }

                &.color-white {
                  background-color: $color-white;
                  border-color: $color-black;
                }

                &.color-gold {
                  background-color: #d0c2ad;
                }

                &.color-silver {
                  background-color: #b2b2b2;
                }
                &.color-ganzrosegold {
                  background-color: #FBD4CF;
                }
                &.color-ganzgolden {
                  background-color: #EED8C0;
                }
                &.color-ganzsilver {
                  background-color: #EDEEF0;
                }
              }
            }
          }
        }

        .product-quantity {
          margin-bottom: 25px;
          width:90px;
          display:inline-block;
          margin-top: 45px;
      vertical-align: top;

          @media (max-width: 720px) {
            margin: 30px 0 10px;
          }

          label {
            margin-right: 20px;
            color: $color-white;
            font-size: 19px;
            display: block;
      vertical-align: top;
            padding-left:15px;
            margin-bottom: 5px;
          }

          input[type="text"] {
            border-radius: 0;
            color: $color-white;
            margin-top: 0;
            margin-left: -5px;
            margin-right: -4px;
            height: 30px;
            width: 30px;
            padding: 0;
            vertical-align: top;
            border-top: none;
      border-bottom: none;
          }

          .quantity-button {
            display: inline-block;
            height: 30px;
            width: 30px;
            text-align: center;
            margin-top: 0;
            background-color: transparent;
            color: $color-white;
            font-size: 18px;

            &:hover {
              cursor: pointer;
            }
          }
        }

        .add-to-cart {
          
          h4 {
            margin-top:0px!important;
          }
          
          table.popup-table {
            margin:0;
            width:100%;
            padding-bottom:20px;
            
            td{
        padding: 10px;
              
              @media (max-width: 720px) {
              padding: 5px;
              }
            }
            
            td:nth-child(1) {
              padding-left:0px;
              
              @media (max-width: 720px) {
              min-width:50px;
              padding:0;
            }
          }
            
          }
          
          input[type="submit"] {
            font-family: $font-family--bold;
            font-size: 18px;
            line-height: inherit;
            letter-spacing: $letter-spacing-base;
            text-transform: uppercase;
            border-radius: 50px;
            padding: 10px 30px 5px;
            background: $color-green;
            height: auto;
            width:305px;
            
            @media (max-width: 720px) {
              width: 100%;
            }
            
          }
          
          input[type="submit"]:hover {
        background: #3e9291;
          }
          
          .added-product-name {
            font-family: "DINNextLTPro-Medium",sans-serif;
            font-size: 19px;
            font-weight: 400!important;
            line-height: 1;
            text-align: left;
            font-style:normal!important;
            display:block!important;
              
            @media (max-width: 720px) {
              font-size: 17px;
            }
          }
          
          .inline {
            display:inline-block!important;
          }
          
          .product-variant-title {
            display:block;
            color: rgb(127, 127, 128);
            font-family: "DINNextLTPro-Regular",sans-serif;
            font-size: 19px;
            font-weight: 400;
            line-height: 28.5px;
            margin-right: 15px;
            text-align:left;
            
            @media (max-width: 720px) {
              font-size: 17px;
            }
          }
          
          .added-product-name-variant {
            display:block;
            color: rgb(127, 127, 128);
            font-family: "DINNextLTPro-Regular",sans-serif;
            font-size: 19px;
            font-weight: 400;
            line-height: 28.5px;
            text-align:left;
            
            @media (max-width: 720px) {
              font-size: 17px;
              line-height: 17.5px;
            }
          }
          
          .product-variant-circle {
            display: inline-block;
            height: 13px;
            width: 13px;
            border-radius: 50px;
            border: 1px solid $color-black;
            
            &.schwarz {
              background-color: $color-black;
            }
            
            &.weiss {
              background-color: $color-white;
              border: 1px solid $color-black;
            }
            
            &.gold {
              background-color: #d0c2ad;
            }
            
            &.silber {
              background-color: #b2b2b2;
            }
            &.ganz.ros\00E9gold {
              background-color: #FBD4CF;
            }
            
            &.ganz.gold {
              background-color: #EED8C0;
            }
            
            &.ganz.silber {
              background-color: #EDEEF0;
            }
          }
            
          .quantity-prod {
            font-family: "DINNextLTPro-Medium",sans-serif;
            font-size: 19px;
            font-weight: 400 !important;
            line-height: 18.5px;
            text-align: left;
            font-style: normal !important;
            display:block;
              
            @media (max-width: 720px) {
              font-size: 17px;
            }
          }
          
          #popup-cta {
            text-align:center;
            Margin: 0 auto;
          }
          
          #popup-cta li {
            display:inline-block;
            margin: 0 auto;
            min-width:255px!important;
            
            @media (max-width: 720px) {
            padding-bottom: 20px!important;
            padding-right: 0px!important;
            padding-left: 0px!important;
            }
            
          }
          
          #popup-cta li:nth-child(1) {
            padding-right:15px;
          }
          
          #popup-cta li:nth-child(2) {
            padding-left:15px;
          }
          
          a.cta {
            color: $color-white;
            font-family: $font-family--bold;
            font-size: 18px;
            line-height: inherit;
            letter-spacing: $letter-spacing-base;
            text-transform: uppercase;
            padding: 10px 30px 5px;
            background: $color-green;
            height: auto;
            display: block;
            
              @media (max-width: 720px) {
              padding: 10px 20px 5px;
            }
          }
            
          a.cta_under {
            color: $color-light-grey;
            font-family: $font-family--bold;
            font-size: 16px;
            line-height: 14px;
            letter-spacing: $letter-spacing-base;
            height: auto;
            display: block;
            text-decoration:underline;
          }
          
          .product-form-bundle {
            
            border-top: 3px solid #eeeeee;
        margin-top: 30px;
        padding-top: 20px;
            
            .cart-upgrade{
              
              .center {
                text-align: center;
          padding-top: 20px;
                
                h4,
                .text-offer{
                  color:$color-green;
                }
                
                p{
                  margin: 7px 0;
                  font-size: 19px;
                  
                  @media (max-width: 720px) {
                    font-size: 17px;
                  }
                }
              }
              #middle-list{
                width:100%;
                padding-top: 15px;
                  
                  #left{
                    width:40%;
                    display:inline-block;
                    float:left;
                    padding-bottom:20px;
                  }
                  #right{
                    width:60%;
                    display:inline-block;
                    padding: 0 0 0 20px;
                    
                    p,ul,.gift-li{
                      margin:5px 0;
                    }
                    p{
                      margin-top:0;
                    }
                    .framePrice-cart{
                      display:inline-block;
                    }
                    .bundle-submit{
                      border-radius:0;
                    }
                  }
              }
            
            }
          
          }
          
          #popup-close{
            position: absolute;
            top: 14px;
            right: 20px;
            margin: 0;
            font-weight: 700 !important;
            font-size: 17px;
            cursor: pointer;
            color:$color-white;
          }
        }
      }
    }
  }
}



//************************************************************************//
// Product Page Elements
//************************************************************************//


.template-product {
  
  .home-module-wrapper {
    clear: both;
  border-bottom: 1px solid #f0f0f0;
    padding-left: 20px;
  padding-right: 20px;
    
    &:nth-child(5) {
      border-bottom: 0;
    }

    .home-module {
      max-width: 1020px;
      margin: 0 auto;
      padding: 50px 30px 75px;
      
      @media (max-width: 720px) {
        padding: 50px 0 75px;
        
        &:nth-child(1) {
          padding-top: 0;
          padding-bottom: 30px;
        }
      }
      
      .fix-for-first-child {
        .home-left-right-feature {

          &:nth-child(2) {
            .block-after-left {
              display: none;
            }
          }
        }
      }

      .home-left-right-feature {
        margin-top: 20px;
        
        @media (max-width: 720px) {
          display: -webkit-box;
          display: -moz-box;
          display: -ms-flexbox;
          display: flex;
          flex-wrap: wrap;
          margin-top: 0;
          
          
          .home-left-right-text {
            order: 1;
            width: 100%;
            margin-top: 30px;
            
            .rte {
              padding: 0 15px;
            }
          }
          
          .home-left-right-media {
            order: 2;
            width: 100%;
            margin-top: 20px;
          }
        }

        &.media-aligned-left {
          
          .block-after-left {
              position: absolute;
              top: 50%;
              right: 60%;
              width: 38%;
              max-width: 377px;
              transform: translate(50%, -50%);

              @media (max-width: 720px) {
                display: none;
              }
          }

          .home-left-right-text {
            padding-left: 15px;
            
            img {
              margin-top: -20px;
          margin-left: -5px;
            }
            
            .home-left-right-text-container {
              padding-left: 90px;
            }
          }

          .home-left-right-media {
            padding-right: 10px;
          }
          
          .home-left-right-media.media-right {
            padding-right: 0px;
            padding-left: 10px;
          }
        }

        &.media-aligned-right {
          
          .block-after-right {
            position: absolute;
            top: 50%;
            left: 60%;
            width: 38%;
            max-width: 377px;
            transform: translate(-50%, -50%);

            @media (max-width: 720px) {
              display: none;
            }
          }
          
          .home-left-right-text {
            
            .home-left-right-text-container {
              text-align: right;
              
              @media (max-width: 720px) {
                text-align: center;
              }
            }
          }

          .home-left-right-media {
            padding-left: 10px;
          }
        }
        
        &.media-aligned-none {
          
          .home-left-right-media {
            padding-right: 10px;
          }
          
          .home-left-right-media.media-right {
            padding-right: 0px;
            padding-left: 10px;
          }
        }
      }
    }
    
    &:nth-child(4) {
      .home-module {
       .home-left-right-feature {
         &:nth-child(1) {
      
          display: -webkit-box;
          display: -moz-box;
          display: -ms-flexbox;
          display: flex;
          
          @media (max-width: 720px) {
            display: block;
          }

          .home-left-right-text {
            display: -webkit-box;
            display: -moz-box;
            display: -ms-flexbox;
            display: flex;
            justify-content: center;
            -webkit-flex-direction: column;
            flex-direction: column;
            position: relative;
            padding-left: 40px !important;
            padding-right: 20px;
            
            @media (max-width: 720px) {
              display: block;
              padding-left: 10px !important;
              padding-right: 10px !important;
              text-align: left;
            }

            &::before {
              content: '';
              position: absolute;
              height: 100%;
              left: 15px;
              border-left: 2px solid $color-orange;
              top: 0;
              
              @media (max-width: 720px) {
                left: 0;
              }
            }

            &::after {
              content: '';
              position: absolute;
              height: 100%;
              top: 0;
              right: 0;
              border-right: 2px solid $color-orange;
            }
          }
        }
       }
      }
    }

  }
  
  .footer-wrapper {
    margin-top:0px;
  }
  
}

.product-module-wrapper {
  border-bottom: 1px solid #f0f0f0;
  
  &:nth-child(6) {
    border-bottom: 0;
  }
  
  .product-module {
    max-width: 1020px;
    margin: 0 auto;
    
    h2 {
      font-size: 56px;
      color:$color-light-grey;

      @media (max-width: 720px) {
        font-size: 25px;
      }
    }
    
    &.product-in-line-features {
      padding: 50px 15px 30px;
      max-width: 1200px;
    }
    
    
    h2.product-leichtigkeit {
      color:$color-white;
    }
    
    .product-in-line-feature {
      width: 24%;
      
      @media (max-width: 720px) {
        width: 100%;
      }
      
      img {
        
        padding: 0px 35px;
        
          @media (max-width: 720px) {
          width: 55%;
        }
      }
      
      .product-in-line-text {
        font-size: 19px;

        @media (max-width: 720px) {
          font-size: 16px;
        }
      }
    }
    
    &.product-bottom-banner {
      max-width: 100%;
      padding: 0;
      
      .full-width-img {
        position: relative;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        height: 400px;
        
        @media (max-width: 720px) {
          height: 300px;
          background-position: 65% center;
        }
        
        .banner-text {
          position: absolute;
          top: 50%;
          left: 50%;
          width: 100%;
          max-width: 1020px;
          margin: 0 auto;
          padding: 0 30px;
          transform: translate(-50%, -50%);
          text-align: center;
        }
      }
    }
  }
