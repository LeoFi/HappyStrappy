<div class="footer-link-list social-icons">
  {% if settings.footer-show-headers %}
    <h4>{{ 'general.social.title' | t }}</h4>
  {% endif %}

  <ul class="clearfix">
    {% if settings.social-facebook-url != blank %}
      <li class="social-link facebook"><a href="{{ settings.social-facebook-url }}" target="_blank">Facebook</a></li>
    {% endif %}
    {% if settings.social-twitter-url != blank %}
      <li class="social-link twitter"><a href="{{ settings.social-twitter-url }}" target="_blank">Twitter</a></li>
    {% endif %}
    {% if settings.social-google-url != blank %}
      <li class="social-link google"><a href="{{ settings.social-google-plus-url }}" target="_blank">Google+</a></li>
    {% endif %}
    {% if settings.social-pinterest-url != blank %}
      <li class="social-link pinterest"><a href="{{ settings.social-pinterest-url }}" target="_blank">Pinterest</a></li>
    {% endif %}
    {% if settings.social-instagram-url != blank %}
      <li class="social-link instagram"><a href="{{ settings.social-instagram-url }}" target="_blank">Instagram</a></li>
    {% endif %}
    {% if settings.social-vimeo-url != blank %}
      <li class="social-link vimeo"><a href="{{ settings.social-vimeo-url }}" target="_blank">Vimeo</a></li>
    {% endif %}
    {% if settings.social-youtube-url != blank %}
      <li class="social-link youtube"><a href="{{ settings.social-youtube-url }}" target="_blank">YouTube</a></li>
    {% endif %}
    {% if settings.social-rss-url != blank %}
      <li class="social-link rss"><a href="{{ settings.social-rss-url }}" target="_blank">RSS</a></li>
    {% endif %}
  </ul>
  
  {% if shop.enabled_payment_types.size > 0 and settings.footer-show-payment-options %}
  <div class="payment-options footer-module">
    <h4>Sicher bezahlen</h4>
    <div id="payment-options-wrapper">
    {% assign enabled_payment_types = 'visa,master,paypal,amazon' | remove: ' ' | split: ',' %}
	{% for type in enabled_payment_types %}
    {% assign cardIcon = type | replace: '_','-' %}
    {% case cardIcon %}
    {% when 'visa' %}
    <span class="{{ cardIcon }}">&#58113;</span>
    {% when 'master' %}
    <span class="{{ cardIcon }}">&#58114;</span>
    {% when 'paypal' %}
    <span class="{{ cardIcon }}">&#58116;</span>
    {% when 'discover' %}
    <span class="{{ cardIcon }}">&#58117;</span>
    {% when 'dankort' %}
    <span class="{{ cardIcon }}">&#58128;</span>
    {% when 'google-wallet' %}
    <span class="{{ cardIcon }}">&#58121;</span>
    {% when 'diners-club' %}
    <span class="{{ cardIcon }}">&#58131;</span>
    {% when 'maestro' %}
    <span class="{{ cardIcon }}">&#58130;</span>
    {% when 'jcb' %}
    <span class="{{ cardIcon }}">&#58129;</span>
    {% when 'stripe' %}
    <span class="{{ cardIcon }}">&#58118;</span>
    {% when 'bitcoin' %}
    <span class="{{ cardIcon }}">&#58132;</span>
    {% endcase %}
    {% endfor %}
    <span class="{{ cardIcon }}"><i class="pw pw-amazon"></i></span>
    <span class="{{ cardIcon }}"><i class="pw pw-sofort"></i></span>
    </div>
  </div>
  {% endif %}
</div>
