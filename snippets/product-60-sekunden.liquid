<div class="product-module-wrapper {{ settings.product-60-sekunden-style }}">
  <div class="product-module product-in-line-features">
    {% if settings.product-60-sekunden-heading != blank %}
      <h2 class="section-title">{{ settings.product-60-sekunden-heading }}</h2>
    {% else %}
      {% unless settings.product-show-60-sekunden-1 or settings.product-show-60-sekunden-2 or settings.product-show-60-sekunden-3 or settings.product-show-60-sekunden-4 or settings.product-show-60-sekunden-5 or settings.product-show-60-sekunden-6 %}
        <h2 class="section-title">{{ 'onboarding.inline_features_section.section_title' | t }}</h2>
      {% endunless %}
    {% endif %}

    {% for i in (1..6) %}
      {% capture feature %}product-show-60-sekunden-{{ i }}{% endcapture %}
      {% if settings[feature] %}

        {% capture heading %}product-60-sekunden-{{ i }}-title{% endcapture %}
        {% capture caption %}product-60-sekunden-{{ i }}-text{% endcapture %}
        {% capture image %}product-60-sekunden-image-{{ i }}.png{% endcapture %}
        {% capture url %}product-60-sekunden-{{ i }}-url{% endcapture %}
        {% capture cta %}product-60-sekunden-{{ i }}-cta{% endcapture %}

        <div class="product-in-line-feature clearfix">

          {% if settings.product-show-60-sekunden-images %}
            <img alt="{{ settings[heading] | strip_html | escape }}" src="{{ image | asset_url }}">
          {% endif %}

          <div class="product-in-line-text">
            {% if settings[heading] != blank %}
              <h3>{{ settings[heading] }}</h3>
            {% endif %}

            {% if settings[caption] != blank %}
              <div class="rte">
                {{ settings[caption] }}
              </div>
            {% endif %}

            {% if settings[url] != blank and settings[cta] != blank %}
              <p class="product-in-line-cta"><a href="{{ settings[url] }}">{{ settings[cta] }}</a></p>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}

    {% unless settings.product-show-60-sekunden-1 or settings.product-show-60-sekunden-2 or settings.product-show-60-sekunden-3 or settings.product-show-60-sekunden-4 or settings.product-show-60-sekunden-5 or settings.product-show-60-sekunden-6 %}
    <div class="product-in-line-feature clearfix">

      <img class="product-helper-image" alt="" src="{{ 'no-image.svg' | asset_url }}" onerror="this.src='{{'no-image.png' | asset_url}}';this.onerror=null;">

      <div class="product-in-line-text">
        <h3>{{ 'onboarding.inline_features_section.first_feature_title' | t }}</h3>

        <div class="rte">
          {{ 'onboarding.inline_features_section.text' | t }}
        </div>
      </div>
    </div>

    <div class="product-in-line-feature clearfix">

      <img class="product-helper-image" alt="" src="{{ 'no-image.svg' | asset_url }}" onerror="this.src='{{'no-image.png' | asset_url}}';this.onerror=null;">

      <div class="product-in-line-text">
        <h3>{{ 'onboarding.inline_features_section.second_feature_title' | t }}</h3>

        <div class="rte">
          {{ 'onboarding.inline_features_section.text' | t }}
        </div>
      </div>
    </div>

    <div class="product-in-line-feature clearfix">

      <img class="product-helper-image" alt="" src="{{ 'no-image.svg' | asset_url }}" onerror="this.src='{{'no-image.png' | asset_url}}';this.onerror=null;">

      <div class="product-in-line-text">
        <h3>{{ 'onboarding.inline_features_section.third_feature_title' | t }}</h3>

        <div class="rte">
          {{ 'onboarding.inline_features_section.text' | t }}
        </div>
      </div>
    </div>
    {% endunless %}
  </div>
</div>
