{% layout 'theme.story' %}
<h1 class="page-title">{{ page.title }}</h1>

<div class="rte">
  {{ page.content }}
</div>

<div class="contact-form-wrapper">

  {% form 'contact' %}

    {% if form.posted_successfully? %}
      <p class="success-message">{{ 'contact.general.success' | t }}</p>
    {% endif %}

    {% if form.errors %}
      <p class="error-message">{{ 'contact.general.error' | t }}</p>
    {% endif %}

    {% unless form.posted_successfully? %}
      <div class="input-wrapper" id="name">
        <input type="text" placeholder="{{ 'general.general.name_placeholder' | t }}" value="" name="contact[name]" class="{% if form.errors contains "author" %}error{% endif %}">
      </div>

      <div class="input-wrapper" id="email">
        <input type="text" placeholder="{{ 'general.general.email_placeholder' | t }}" value="" name="contact[email]" class="{% if form.errors contains "email" %}error{% endif %}">
      </div>
  
  	  <div class="input-wrapper" id="phone">
        <input type="text" placeholder="{{ 'general.general.phone_number' | t }}" value="" name="contact[phone]" class="{% if form.errors contains "body" %}error{% endif %}">
      </div>

  	  <div class="input-wrapper" id="company">
        <input type="text" placeholder="{{ 'general.general.contact_company' | t }}" value="" name="contact[company]" class="{% if form.errors contains "body" %}error{% endif %}">
      </div>
  
      <div class="input-wrapper" id="body">
        <textarea placeholder="{{ 'general.general.message_placeholder' | t }}" name="contact[body]" rows="6" class="{% if form.errors contains "body" %}error{% endif %}"></textarea>
      </div>

      <div class="input-wrapper" id="submit">
        <input type="hidden" class="spam-check" value="">
        <input type="submit" value="{{ 'general.general.submit' | t }}">
      </div>
    {% endunless %}

  {% endform %}
</div>